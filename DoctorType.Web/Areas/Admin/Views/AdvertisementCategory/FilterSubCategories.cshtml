@model List<DoctorType.Domain.Entites.Adevrtisement.AdvertisementCategory>
@using DoctorType.Application.Convertors
@using DoctorType.Application.Extensions

@{
    ViewData["Title"] = "لیست دسته بندی ها";
}

@section styles{
    <!-- Datatable -->
    <link href="/AdminContent/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <!-- Custom Stylesheet -->
    <link href="/AdminContent/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
}

    @section scripts{
    <script src="js/deznav-init.js"></script>
    <!-- Datatable -->
    <script src="/AdminContent/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/AdminContent/js/plugins-init/datatables.init.js"></script>
}

    @section Breadcrumbs{
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-area="Admin" asp-controller="Home"> داشبورد ادمین </a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-area="Admin" asp-controller="AdvertisementCategory"> مدیریت دسته بندی </a></li>
        </ol>
    </div>
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">دسته بندی ها</h4>
                </div>
                <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <div id="example5_wrapper" class="dataTables_wrapper no-footer">

                            <table id="example5" class="display dataTable no-footer" style="min-width: 845px" Tariff="grid" aria-describedby="example5_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example5" rowspan="1" colspan="1" style="width: 51.1333px;" aria-sort="ascending" aria-label=":  ">عنوان دسته بندی</th>
                                        <th class="sorting" tabindex="0" aria-controls="example5" rowspan="1" colspan="1" style="width: 84.4px;" aria-label="اقدامات: فعال کنید تا ستون صعودی مرتب شود">اقدامات</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var Category in Model)
                                    {
                                        <tr role="row" class="odd" remove-ajax-item="@Category.Id">

                                            <td>@Category.Title</td>

                                            <td>
                                                <div class="d-flex">
                                                    <a title="ویرایش " asp-area="Admin" asp-controller="AdvertisementCategory" asp-action="Edit" asp-route-Id="@Category.Id" class="btn btn-warning shadow btn-xs sharp m-1"><i class="fa fa-edit"></i></a>
                                                    <a ajax-url-button="@Category.Id" title="حذف" asp-area="Admin" asp-controller="AdvertisementCategory" asp-action="DeleteAdsCategory" asp-route-id="@Category.Id" class="btn btn-danger shadow btn-xs sharp m-1"><i class="fa fa-trash"></i></a>

                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>

                }
                else
                {
                    <partial name="_NoItemFoundPartial" />
                }
            </div>
        </div>
    </div>
</div>
