@model DoctorType.Domain.ViewModels.Admin.Dashboard.AdminDashboardViewModel
@using DoctorType.Application.Extensions
@using DoctorType.Application.Utils

@{
    ViewData["Title"] = "پنل ادمین";
}

@section scripts{

    <script>

        function LoadAdvertisementModalBody(AdsId) {
            $.ajax({
                url: "/Show-Advertisement-Detail",
                type: "get",
                data: {
                    Id: AdsId
                },
                success: function (response) {
                    $("#ProductModalContent").html(response);
                    $("#ProductModal").modal("show");
                }
            });
        }

    </script>
}

    @section Breadcrumbs{
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@ViewData["Title"] </h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-area="Admin" asp-controller="Home"> داشبورد ادمین </a></li>
        </ol>
    </div>
}

    <div class="row">

        @*This List Is About Users*@
        <partial name="_CountBox" model="Model" />

        <div class="col-md-12">

            <div class="row">

                @*Count Of Waitig For Expert Advertisement*@
                <partial name="_CountOfWaitigForExpertAdvertisement" model="Model.CountOfWaitigForExpertAdvertisement" />

                @*Count Of Selected From Expert Advertisement*@
                <partial name="_CountOfSelectedFromExpertAdvertisement" model="Model.CountOfSelectedFromExpertAdvertisement" />

            </div>

        </div>

        <div class="col-md-12">

            <div class="row">

                @*Lastest Advsertisement Without Expert*@
                <partial name="_LastestAdvsertisementWithoutExpert" model="Model.LastestAdvsertisementWithoutExpert" />

                @*Lastest Advsertisement With Expert*@
                <partial name="_LastestAdvsertisementWithExpert" model="Model.LastestAdvsertisementWithExpert" />

            </div>

        </div>

    </div>



