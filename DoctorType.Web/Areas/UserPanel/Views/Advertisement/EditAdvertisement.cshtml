@using DoctorType.Domain.Entities.Account
@model DoctorType.Domain.ViewModels.UserPanel.Advertisement.EditAdvertisementUserPanelViewModel

@{
    ViewData["Title"] = "ویرایش آگهی ";
}

@section scripts{
    <partial name="_JqueryValidators" />
}

    @section Breadcrumbs{
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-area="UserPanel" asp-controller="Home"> داشبورد  </a></li>
            <li class="breadcrumb-item"><a asp-action="CreateAdvertisement" asp-area="UserPanel" asp-controller="Advertisement"> میدیریت آگهی ها </a></li>
        </ol>
    </div>
}

    <form asp-area="UserPanel" asp-controller="Advertisement" asp-action="EditAdvertisement" method="post" enctype="multipart/form-data">
        <input asp-for="AdvertisementId" type="hidden" />
        <div class="row">

            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"> اطلاعات آگهی  </h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label> عنوان  </label>
                                    <input asp-for="Title" type="text" class="form-control" placeholder=" عنوان را وارد کنید ">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="input-group mb-3">

                                <div class="input-group-prepend">
                                    <span class="input-group-text">آپلود </span>
                                </div>
                                <div class="custom-file">
                                    <input asp-for="File" type="file" class="custom-file-input">
                                    <label class="custom-file-label">انتخاب فایل</label>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>دسته بتدی آگهی شما </label>

                                    <div class="dropdown bootstrap-select show-tick form-control dropup">
                                    @if (Model.AdvertisementCategories != null && Model.AdvertisementCategories.Any())
                                    {
                                        <select asp-for="AdvertisementSelectedSkills" class="form-control" multiple="" id="sel2" tabindex="-98">

                                            @if (Model.AdvertisementCategories != null && Model.AdvertisementCategories.Any())
                                            {
                                                @foreach (var item in Model.AdvertisementCategories)
                                                {
                                                    if (Model.AdvertisementSelectedSkills.Contains(item.Id))
                                                    {
                                                        <option selected value="@item.Id">@item.Title </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Id">@item.Title </option>
                                                    }
                                                }
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <select class="form-control">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label> توضیحات تکمیلی  </label>
                                <textarea asp-for="Description" rows="5" ckeditor="1" class="form-control"> </textarea>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-outline-primary">ویرایش</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>