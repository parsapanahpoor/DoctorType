@model DoctorType.Domain.ViewModels.Account.ForgetPasswordViewModel

@{
    ViewData["Title"] = "بازیابی کلمه ی عبور";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

    <div class="login_page_bg">
        <div class="container">
            <div class="customer_login">
                <div class="row">
                    <!--register area start-->
                    <div class="col-lg-6 col-md-6 centerRegister">
                        <div class="account_form register">
                            <h2>بازیابی کلمه ی عبور</h2>
                                    <form asp-area="" asp-controller="Account" asp-action="ForgotPassword" method="post">
                                <p>
                                    <label asp-for="Mobile">تلفن همراه <span>*</span></label>
                                    <input  asp-for="Mobile" class="form-control" placeholder="موبایل" >
                                    <span class="text-danger" asp-validation-for="Mobile"></span>
                                </p>
                                <div class="login_submit">
                                    <button type="submit">ارسال کد بازیابی</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!--register area end-->
                </div>
            </div>
        </div>
    </div>